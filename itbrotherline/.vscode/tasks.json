{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "-v",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-v",
                "${file}"
            ]
        }
    ],
    "options": {
        "env": {
            "GOPATH":"/home/fan/dev/go/bin",
            "GOROOT":"/home/fan/go/bin"
        }
    },
    "presentation":{
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
        
}